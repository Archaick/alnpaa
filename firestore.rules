rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    match /certificates/{certificateCode} {
      // Public verification endpoint reads a single known code.
      allow get: if true;

      // Admin panel operations (list/add/update/delete) require auth.
      allow list: if isSignedIn();
      allow create: if isSignedIn()
        && request.resource.data.code == certificateCode;
      allow update: if isSignedIn()
        && resource.data.code == certificateCode
        && request.resource.data.code == resource.data.code;
      allow delete: if isSignedIn();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
